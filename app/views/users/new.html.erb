<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
  <p>
      <%= render 'shared/error_messages' %>
  </p>
  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>
  </p>
  <%= f.submit "Create my account" %>
<% end %>
